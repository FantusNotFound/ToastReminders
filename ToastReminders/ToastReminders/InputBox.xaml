<Window x:Class="ToastReminders.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToastReminders"
        mc:Ignorable="d"
        Title="InputBox" Height="150" Width="300">
    <Grid>
        <TextBox x:Name="ReminderTitle" HorizontalAlignment="Center" Height="30" Margin="0,25,0,0" TextWrapping="NoWrap" Text="Reminder title" VerticalAlignment="Top" Width="175" FontSize="15" FontFamily="Segoe UI Semibold" Foreground="Gray" Tag="Reminder title" GotFocus="TextGotFocus" LostFocus="TextLostFocus"/>
        <Button x:Name="AddReminder" Content="Add Reminder" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Width="150" Height="30" Click="AddReminder_Click" FontSize="15" FontFamily="Segoe UI Semibold"/>
    </Grid>
</Window>
